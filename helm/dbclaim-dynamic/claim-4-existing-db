# Source: dbclaim-sample/templates/dbclaim-sample.yaml

apiVersion: persistance.atlas.infoblox.com/v1
kind: DatabaseClaim
metadata:
name: databaseclaim-existingdb
namespace: dbclaim
spec:
appId: sample-app
secretName: databaseclaim-existingDB-secret
type: postgres
userName: sample_user
host: local
port: 5432
databaseName: sub
dsnName: dsn.txt
shape: db.t2.small
minStorageGB: 20
useExistingSource: true
sourceDataFrom:
database:
dsn: postgres://postgres:postgres@localhost:5432/pub?sslmode=disable
secretRef:
name: databaseclaim-existingDB-root-secret
namespace:
